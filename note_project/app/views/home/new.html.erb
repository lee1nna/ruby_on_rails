<h2>새 글을 쓰는 페이지입니다.</h2>

<% if false %>
<form action="/home/create" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    제목: <input type="text", name="post_title"><br>
    내용: <textarea name="post_content"></textarea><br>
    <input type="submit" value="작성">
</form>

<%# rails의 form_tag 이용해 작성 %>
<%=form_tag(posts_path, method:"post") do%>
    제목 : <%=text_field_tag('post_title', nil)%> <br>
    내용 : <%=text_area_tag('post_content', nil)%> <br>
    <%# rails의 label_tag 이용해 작성 %>
    <%# label_tag 'post_title', '제목'%> 
    <%# label_tag 'post_content', '내용'%> 
    <%=submit_tag '작성'%>
<%end%>
<%end%>

<%=render 'form'%>